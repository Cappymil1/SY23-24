        <Rectangle x:Name="colorrectangle2" HorizontalAlignment="Left" Height="46" Margin="10,217,0,0" Stroke="Black" VerticalAlignment="Top" Width="46" Fill="#FFF4E606"/>
        <Rectangle x:Name="colorrectangle3" HorizontalAlignment="Left" Height="46" Margin="84,217,0,0" Stroke="Black" VerticalAlignment="Top" Width="46" Fill="#FFF71111"/>
        <Rectangle x:Name="colorrectangle4" HorizontalAlignment="Left" Height="46" Margin="10,284,0,0" Stroke="Black" VerticalAlignment="Top" Width="46" Fill="#FF063FF4"/>
        <Rectangle x:Name="colorrectangle5" HorizontalAlignment="Left" Height="46" Margin="84,284,0,0" Stroke="Black" VerticalAlignment="Top" Width="46" Fill="#FF1AF406"/>

    </Grid>
</Window>
